<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp">

        <TextView
            android:layout_marginTop="400dp"
            android:layout_width="308dp"
            android:layout_height="91dp"
            android:text="Belajar dan Belanja dengan Mudah"
            android:textSize="32dp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="308dp"
            android:layout_height="91dp"
            android:text="Nikmati video pembelajaran dari ahli dan belanja ikan serta perlengkapan akuarium langsung dari aplikasi."
            android:textSize="16dp"
            android:fontFamily="@font/inter"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_onboard"
            android:layout_gravity="right"
            android:id="@+id/btn_onboard"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>